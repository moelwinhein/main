<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="true" >
        <shape>
            <corners
                android:radius="300dp"
                />
            <solid
                android:color="#0080ff"
                />
            <size
                android:width="0dp"
                android:height="0dp"
                />
        </shape>
    </item>
    <item
        android:state_pressed="true" >
        <shape>
            <corners
                android:radius="300dp"
                />
            <solid
                android:color="#0080ff"
                />
            <size
                android:width="0dp"
                android:height="0dp"
                />
        </shape>
    </item>
    <item
        android:state_focused="false"
        android:state_pressed="false">
        <shape>
            <corners
                android:radius="300dp"
                />
            <solid
                android:color="#3F4354"
                />
            <size
                android:width="0dp"
                android:height="0dp"
                />
        </shape>
    </item>

</selector>