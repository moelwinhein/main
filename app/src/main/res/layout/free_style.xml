<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:splitMotionEvents="true" >

    <RelativeLayout
        android:layout_above="@+id/colorhsv"
        android:id="@+id/freeStyleLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:splitMotionEvents="true">
        <ImageView
            android:id="@+id/collageBgView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_above="@+id/hsv"
        android:id="@+id/colorhsv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none"
        android:background="#803F4354">
        <LinearLayout
            android:id="@+id/colorlayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/white"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/moccasin"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/moccasin"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/light_pink"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/light_pink"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/light_yellow"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/light_yellow"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/yellow"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/yellow"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/orange"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/orange"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/light_green"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/light_green"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/green"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/green"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/light_blue"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/light_blue"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/aqua"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/aqua"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/medium_blue"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/medium_blue"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/blue"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/blue"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/purple"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/purple"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dark_pink"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/dark_pink"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/light_red"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/light_red"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/red"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/red"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dark_gray"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/dark_gray"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/light_black"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/light_black"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/black"
                android:orientation="vertical"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onClick">
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none"
        android:background="#803F4354">
        <LinearLayout
            android:id="@+id/mlayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="5dp">
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp">
                <ImageView
                    android:adjustViewBounds="true"
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:onClick="onClick"/>
                </LinearLayout>

            <LinearLayout

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp">
                <ImageView
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:onClick="onClick"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp">
                <ImageView
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:onClick="onClick"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp">
                <ImageView
                    android:id="@+id/layout4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:onClick="onClick"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp">
                <ImageView
                    android:id="@+id/layout5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:onClick="onClick"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp">
                <ImageView
                    android:id="@+id/layout6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:onClick="onClick"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp">
                <ImageView
                    android:id="@+id/layout7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:onClick="onClick"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp">
                <ImageView
                    android:id="@+id/layout8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:onClick="onClick"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp">
                <ImageView
                    android:id="@+id/layout9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:onClick="onClick"/>
            </LinearLayout>
            </LinearLayout>

        </HorizontalScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="#803F4354">
        <Button
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/backBtn"
            android:background="@drawable/button_selector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_weight="1"
            android:paddingBottom="0dp"
            android:onClick="goBackToPhotoSelection"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="Collage"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_weight="2"/>
        <Button
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_selector"
            android:id="@+id/saveFreeBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_weight="1"
            android:paddingBottom="0dp"/>
    </LinearLayout>
</RelativeLayout>